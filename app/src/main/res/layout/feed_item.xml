<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingBottom="4dp">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        card_view:cardCornerRadius="2dp">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">

            <TextView
                android:id="@+id/date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:textSize="12sp"
                tools:text="ровно 5 минут назад"/>

            <TextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColor="#000000"
                tools:text="Бывший студент, из-за нехватки средств вынужденный оставить учёбу, решился на убийство"/>

            <View
                android:id="@+id/item_divider"
                style="@style/Divider"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>

            <ImageView
                android:id="@+id/list_description_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                tools:src="@drawable/raskolnikov"/>

            <TextView
                android:id="@+id/description_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                tools:text="Он решился убить одну старуху, титулярную советницу, дающую деньги на проценты. Старуха глупа, глуха, больна, жадна, берёт жидовские проценты, зла и заедает чужой век, мучая у себя в работницах свою младшую сестру. „Она никуда не годна“, „для чего она живет?“, „Полезна ли она хоть кому-нибудь?“"/>
            <!--WebView hrenovo rabotaet v liste-->
            <!--<WebView-->
            <!--android:id="@+id/description_text"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"/>-->
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>